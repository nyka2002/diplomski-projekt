{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["fra1"],
  "functions": {
    "src/app/api/chat/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/admin/scraping/trigger/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/scrape/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/scrape?type=full",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/scrape?type=rent",
      "schedule": "0 */2 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
